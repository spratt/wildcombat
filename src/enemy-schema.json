{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Wildsea Enemy",
  "type": "object",
  "required": [
    "name",
    "blurb",
    "description",
    "size",
    "aspects",
    "drives",
    "quirks",
    "presence"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Enemy name"
    },
    "blurb": {
      "type": "string",
      "description": "Short summary of the enemy"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the enemy"
    },
    "size": {
      "type": "string",
      "enum": ["small", "medium", "large", "variable"],
      "description": "Enemy size category"
    },
    "aspects": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "description", "trackLength"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Aspect name"
          },
          "description": {
            "type": "string",
            "description": "Aspect description"
          },
          "trackLength": {
            "type": "integer",
            "minimum": 1,
            "description": "Number of track bubbles for this aspect"
          },
          "abilityCode": {
            "type": "string",
            "enum": ["incapacitate", "dualWieldBarrage", "highNoonDuel", "desertMirage"],
            "description": "Special ability code for combat mechanics"
          }
        },
        "additionalProperties": false
      },
      "description": "Enemy aspects and abilities with track lengths"
    },
    "drives": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Drive name"
          },
          "description": {
            "type": "string",
            "description": "Drive description"
          }
        },
        "additionalProperties": false
      },
      "description": "Enemy motivations and goals"
    },
    "quirks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Quirk name"
          },
          "description": {
            "type": "string",
            "description": "Quirk description"
          }
        },
        "additionalProperties": false
      },
      "description": "Enemy behavioral quirks and traits"
    },
    "presence": {
      "type": "object",
      "patternProperties": {
        "^(Sight|Sound|Smell|Taste|Touch)$": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "description": "Sensory descriptions of the enemy"
    }
  },
  "additionalProperties": false
}